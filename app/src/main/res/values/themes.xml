<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestMVVM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/PrimaryColorDark</item>
        <item name="colorOnPrimary">@color/accentColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/accentColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
    <style name="caption">
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="bodySmall">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="bodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="titleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
    <style name="titleXLarge">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
    <style name="subtitle">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
</resources>